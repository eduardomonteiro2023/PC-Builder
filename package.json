{
  "name": "pc-builder",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/http-client": "^3.12.0",
    "@sap/cds": "^7",
    "@sap/xssec": "^3.6.1",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^7",
    "@sap/ux-specification": "^1.120.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-adminapp": "cds watch --open adminapp/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-appmain": "cds watch --open appmain/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-pcbuilder-ui": "cds watch --open pcbuilder-ui/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "impl": "@cap-js/sqlite",
        "credentials": {
          "url": "db.sqlite"
        }
      },
      "metadata": {
        "kind": "odata",
        "model": "srv/external/metadata",
        "credentials": {
          "url": "https://services.odata.org/v4/OData/OData.svc"
        }
      }
    }
  },
  "sapux": [
    "app/appmain",
    "app/pcbuilder-ui",
    "app/pcbuilder-ui"
  ]
}
